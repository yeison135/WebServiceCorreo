public class PropiedadesServerDto extends AutenticacionDto{ 
    
    // Nombre del host de correo, es smtp.gmail.com
    private String host;
    // TLS si está disponible
    private boolean tls;
    // Puerto de gmail para envio de correos
    private int puerto;
    // Nombre del usuario
    private String remitente;        
    // Si requiere o no usuario y password para conectarse.
    private boolean autenticacion;

    public void setVerLog(boolean verLog) {
        this.verLog = verLog;
    }
    // Para obtener un log de salida más extenso
    private boolean verLog;
    

    public String getHost() {
        return host;
    }

    public void setHost(String host) {
        this.host = host;
    }

    public boolean isTls() {
        return tls;
    }

    public void setTls(boolean tls) {
        this.tls = tls;
    }

    public int getPuerto() {
        return puerto;
    }

    public void setPuerto(int puerto) {
        this.puerto = puerto;
    }

    public String getRemitente() {
        return remitente;
    }

    public void setRemitente(String remitente) {
        this.remitente = remitente;
    }
    
    public boolean isAutenticacion() {
        return autenticacion;
    }

    public void setAutenticacion(boolean autenticacion) {
        this.autenticacion = autenticacion;
    }
    
}
